<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Stroke color for toolbar icons (matches Refresh). -->
    <SolidColorBrush x:Key="ToolbarNavIconBrush" Color="#FF2D7DBA"/>

    <DrawingImage x:Key="OpenInNewWindowIcon">
        <DrawingImage.Drawing>
            <DrawingGroup>

                <!-- Window outline (4:3 aspect ratio - wider than taller) -->
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource ToolbarNavIconBrush}" Thickness="1.6"
                             StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="2,7,16,12" RadiusX="2" RadiusY="2"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- Title bar -->
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource ToolbarNavIconBrush}" Thickness="1.6"
                             StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="4,9,10,2.5" RadiusX="1" RadiusY="1"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- Arrow stem -->
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource ToolbarNavIconBrush}" Thickness="1.6"
                             StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <LineGeometry StartPoint="13,15" EndPoint="21,7"/>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

                <!-- Arrow head (corner style) -->
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Brush="{StaticResource ToolbarNavIconBrush}" Thickness="1.6"
                             StartLineCap="Round" EndLineCap="Round" LineJoin="Round"/>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <PathGeometry>
                            <PathFigure StartPoint="17,7" IsClosed="False" IsFilled="False">
                                <LineSegment Point="21,7"/>
                                <LineSegment Point="21,11"/>
                            </PathFigure>
                        </PathGeometry>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>

            </DrawingGroup>
        </DrawingImage.Drawing>
    </DrawingImage>

</ResourceDictionary>
