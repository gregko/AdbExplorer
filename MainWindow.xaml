<Window x:Class="AdbExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdbExplorer.Converters"
        mc:Ignorable="d"
        Title="ADB Explorer" Height="700" Width="1200"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Copy" Executed="CopyCommand_Executed" CanExecute="CopyCommand_CanExecute"/>
        <CommandBinding Command="ApplicationCommands.Paste" Executed="PasteCommand_Executed" CanExecute="PasteCommand_CanExecute"/>
        <CommandBinding Command="ApplicationCommands.Cut" Executed="CutCommand_Executed" CanExecute="CutCommand_CanExecute"/>
        <CommandBinding Command="ApplicationCommands.SelectAll" Executed="SelectAllCommand_Executed" CanExecute="SelectAllCommand_CanExecute"/>
        <CommandBinding Command="ApplicationCommands.Delete" Executed="DeleteCommand_Executed" CanExecute="DeleteCommand_CanExecute"/>
    </Window.CommandBindings>

    <Window.Resources>
        <local:FileSizeConverter x:Key="FileSizeConverter"/>
        <local:FileIconConverter x:Key="FileIconConverter"/>
        <local:AccessibilityColorConverter x:Key="AccessibilityColorConverter"/>
        <local:FolderIconColorConverter x:Key="FolderIconColorConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <!-- Device Tabs -->
        <TabControl Grid.Row="0" Name="DeviceTabControl" Height="32"
                    SelectionChanged="DeviceTabControl_SelectionChanged"
                    Background="#F5F5F5">
        </TabControl>

        <!-- Navigation Toolbar -->
        <ToolBarTray Grid.Row="1" Height="35" IsLocked="True">
            <ToolBar OverflowMode="Never">
            <ToolBar.Resources>
                <FontFamily x:Key="ToolbarIconFont">Segoe MDL2 Assets</FontFamily>

                <Style x:Key="ToolbarIconButton" TargetType="Button">
                    <Setter Property="Width" Value="34"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Margin" Value="2,0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="FontFamily" Value="{StaticResource ToolbarIconFont}"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Foreground" Value="#444444"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#120078D4"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#330078D4"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#220078D4"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#550078D4"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#9AA0A6"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style x:Key="ToolbarBadge" TargetType="Border">
                    <Setter Property="Width" Value="13"/>
                    <Setter Property="Height" Value="13"/>
                    <Setter Property="CornerRadius" Value="6.5"/>
                    <Setter Property="HorizontalAlignment" Value="Right"/>
                    <Setter Property="VerticalAlignment" Value="Bottom"/>
                    <Setter Property="Margin" Value="0,0,-4,-4"/>
                </Style>

                <Style x:Key="ToolbarBadgeGlyph" TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="{StaticResource ToolbarIconFont}"/>
                    <Setter Property="FontSize" Value="10"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </ToolBar.Resources>

            <Button Name="BackButton" Content="&#xE72B;" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#2D7DBA"
                    Click="BackButton_Click" IsEnabled="False" ToolTip="Back"/>
            <Button Name="ForwardButton" Content="&#xE72A;" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#2D7DBA"
                    Click="ForwardButton_Click" IsEnabled="False" ToolTip="Forward"/>
            <Button Name="UpButton" Content="&#xE74A;" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#2D7DBA"
                    Click="UpButton_Click" ToolTip="Up"/>
            <Separator/>
            <Button Name="RefreshButton" Content="&#xE72C;" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#2D7DBA"
                    FontWeight="Bold"
                    Click="RefreshButton_Click" ToolTip="Refresh"/>
            <Separator/>
            <Button Name="NewWindowButton" Style="{StaticResource ToolbarIconButton}"
                    Width="38"
                    Foreground="#2D7DBA"
                    Click="NewWindowButton_Click" ToolTip="Open current folder in new window">
                <Image Width="24" Height="18"
                       Source="{StaticResource OpenInNewWindowIcon}"
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>
            </Button>
            <Separator/>
            <ComboBox Name="FavoritesComboBox" Width="200" Height="26"
                      VerticalAlignment="Center"
                      SelectionChanged="FavoritesComboBox_SelectionChanged"
                      PreviewMouseRightButtonDown="FavoritesComboBox_PreviewMouseRightButtonDown">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock ToolTip="{Binding Path}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding DisplayName}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPlaceholder}" Value="True">
                                            <Setter Property="Text" Value="Favorites:"/>
                                            <Setter Property="FontStyle" Value="Italic"/>
                                            <Setter Property="Foreground" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
                <ComboBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Edit Name" Click="EditFavoriteName_Click"/>
                        <MenuItem Header="Remove" Click="RemoveFavoriteContext_Click"/>
                    </ContextMenu>
                </ComboBox.ContextMenu>
            </ComboBox>
            <Button Name="AddFavoriteButton" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#B8860B"
                    Click="AddFavoriteButton_Click" ToolTip="Add current folder to favorites">
                <Grid Width="22" Height="22" VerticalAlignment="Center" Margin="0,-2,0,0">
                    <TextBlock Text="&#xE734;" FontFamily="{StaticResource ToolbarIconFont}" FontSize="20"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Border Style="{StaticResource ToolbarBadge}" Background="#2E7D32">
                        <TextBlock Text="&#xE710;" Style="{StaticResource ToolbarBadgeGlyph}"/>
                    </Border>
                </Grid>
            </Button>

            <Button Name="RemoveFavoriteButton" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#B8860B"
                    Click="RemoveFavoriteButton_Click" ToolTip="Remove selected favorite">
                <Grid Width="22" Height="22" VerticalAlignment="Center" Margin="0,-2,0,0">
                    <TextBlock Text="&#xE734;" FontFamily="{StaticResource ToolbarIconFont}" FontSize="20"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Border Style="{StaticResource ToolbarBadge}" Background="#C15C5C">
                        <TextBlock Text="&#xE711;" Style="{StaticResource ToolbarBadgeGlyph}"/>
                    </Border>
                </Grid>
            </Button>
            <Separator/>
            <Button Name="NewFolderButton" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#2E7D32"
                    Click="NewFolderButton_Click" ToolTip="New Folder">
                <Grid Width="24" Height="24" VerticalAlignment="Center" Margin="0,-2,0,0">
                    <Viewbox Width="24" Height="24">
                        <Grid Width="24" Height="24">
                            <Rectangle Width="18" Height="12" RadiusX="2" RadiusY="2"
                                       Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       StrokeThickness="1.6"
                                       HorizontalAlignment="Left" VerticalAlignment="Top"
                                       Margin="3,10,0,0"/>
                            <Rectangle Width="8" Height="5" RadiusX="1.5" RadiusY="1.5"
                                       Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       StrokeThickness="1.6"
                                       HorizontalAlignment="Left" VerticalAlignment="Top"
                                       Margin="4,7,0,0"/>
                        </Grid>
                    </Viewbox>
                    <Border Style="{StaticResource ToolbarBadge}" Background="#2E7D32">
                        <TextBlock Text="&#xE710;" Style="{StaticResource ToolbarBadgeGlyph}"/>
                    </Border>
                </Grid>
            </Button>

            <Button Name="DeleteButton" Content="&#xE74D;" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#C15C5C"
                    FontSize="18"
                    Click="DeleteButton_Click" ToolTip="Delete"/>
            <Separator/>
            <Button Name="HelpButton" Content="&#xE897;" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#556CD6"
                    FontWeight="Bold"
                    Click="HelpButton_Click" ToolTip="Help (F1)"/>
            <Separator/>
            <Button Name="AboutButton" Content="&#xE946;" Style="{StaticResource ToolbarIconButton}"
                    Foreground="#556CD6"
                    FontSize="18"
                    Click="AboutButton_Click" ToolTip="About"/>
        </ToolBar>
        </ToolBarTray>

        <!-- Path Bar -->
        <Grid Grid.Row="2" Height="30" Background="#FAFAFA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Path:" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox Grid.Column="1" Name="PathTextBox"
                     VerticalAlignment="Center" Margin="5,0"
                     KeyDown="PathTextBox_KeyDown"
                     MouseDoubleClick="PathTextBox_MouseDoubleClick"/>
            <Button Grid.Column="2" Content="Go" Width="40" Margin="5,0"
                    Click="GoButton_Click"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Folder Tree -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <TreeView Name="FolderTreeView" 
                          SelectedItemChanged="FolderTreeView_SelectedItemChanged"
                          PreviewMouseRightButtonDown="TreeView_PreviewMouseRightButtonDown"
                          TreeViewItem.Expanded="TreeViewItem_Expanded"
                          AllowDrop="True"
                          DragOver="FolderTreeView_DragOver"
                          Drop="FolderTreeView_Drop">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“ " Foreground="#E8A317"/>
                                <TextBlock Text="{Binding Name}"
                                          Foreground="{Binding IsAccessible, Converter={StaticResource AccessibilityColorConverter}}"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                    <TreeView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Open in New Window" Click="TreeOpenInNewWindow_Click"/>
                            <MenuItem Header="Add to Favorites" Click="TreeAddToFavoritesMenuItem_Click"/>
                            <Separator/>
                            <MenuItem Header="Rename" Click="TreeRenameMenuItem_Click"/>
                            <MenuItem Header="Delete" Click="TreeDeleteMenuItem_Click"/>
                            <MenuItem Header="Properties" Click="TreePropertiesMenuItem_Click"/>
                        </ContextMenu>
                    </TreeView.ContextMenu>
                </TreeView>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Stretch" 
                          Background="#E0E0E0"/>

            <!-- File List -->
            <ListView Grid.Column="2" Name="FileListView"
                                      SelectionMode="Extended"
                                      MouseDoubleClick="FileListView_MouseDoubleClick"
                                      PreviewMouseLeftButtonDown="FileListView_PreviewMouseLeftButtonDown"
                                      PreviewMouseLeftButtonUp="FileListView_PreviewMouseLeftButtonUp"
                                      PreviewMouseMove="FileListView_PreviewMouseMove"
                                      Drop="FileListView_Drop"
                                      DragOver="FileListView_DragOver"
                                      AllowDrop="True">
                <ListView.View>
                    <GridView>
                        <GridView.ColumnHeaderContainerStyle>
                            <Style TargetType="GridViewColumnHeader">
                                <EventSetter Event="Click" Handler="GridViewColumnHeader_Click"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            </Style>
                        </GridView.ColumnHeaderContainerStyle>
                        <GridViewColumn Header="Name" Width="300">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding ., Converter={StaticResource FileIconConverter}}"
                                                  Foreground="{Binding ., Converter={StaticResource FolderIconColorConverter}}"
                                                  Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}"
                                                  Foreground="{Binding IsAccessible, Converter={StaticResource AccessibilityColorConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Size" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Size, Converter={StaticResource FileSizeConverter}}"
                                              Foreground="{Binding IsAccessible, Converter={StaticResource AccessibilityColorConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Type" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Type}"
                                              Foreground="{Binding IsAccessible, Converter={StaticResource AccessibilityColorConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Modified" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Modified}" 
                                              Foreground="{Binding IsAccessible, Converter={StaticResource AccessibilityColorConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Permissions" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Permissions}" 
                                              FontFamily="Consolas"
                                              Foreground="{Binding IsAccessible, Converter={StaticResource AccessibilityColorConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Open" Click="OpenMenuItem_Click" FontWeight="Bold"/>
                        <MenuItem Header="Open in New Window" Click="OpenInNewWindowMenuItem_Click"/>
                        <MenuItem Header="Add to Favorites" Click="AddToFavoritesMenuItem_Click"/>
                        <Separator/>
                        <MenuItem Header="Copy" Click="CopyMenuItem_Click"/>
                        <MenuItem Header="Paste" Click="PasteMenuItem_Click"/>
                        <MenuItem Header="Rename" Click="RenameMenuItem_Click"/>
                        <MenuItem Header="Delete" Click="DeleteMenuItem_Click"/>
                        <Separator/>
                        <MenuItem Header="Copy file name" Click="CopyFileNameMenuItem_Click"/>
                        <MenuItem Header="Copy full path" Click="CopyFullPathMenuItem_Click"/>
                        <Separator/>
                        <MenuItem Header="New Folder" Click="NewFolderMenuItem_Click"/>
                        <Separator/>
                        <MenuItem Header="Properties" Click="PropertiesMenuItem_Click"/>
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>

            <!-- Error overlay panel -->
            <Border Name="ErrorInfoPanel" Background="White" 
            BorderBrush="Red" BorderThickness="1" 
            Visibility="Collapsed" Margin="20">
                <StackPanel Margin="20">
                    <TextBlock Text="âš  Access Denied" FontSize="16" FontWeight="Bold" 
                       Foreground="Red" Margin="0,0,0,10"/>
                    <TextBlock Name="ErrorPathText" TextWrapping="Wrap"/>
                    <TextBlock Name="ErrorMessageText" TextWrapping="Wrap" 
                       Foreground="Gray" Margin="0,10"/>
                    <TextBlock Text="This directory requires root access or special permissions." 
                       TextWrapping="Wrap" Margin="0,10"/>
                    <Button Content="Go Back" Width="100" HorizontalAlignment="Left"
                    Click="GoBackFromError_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="ItemCountText" Text="0 items"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="SelectionText" Text="0 selected"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="WindowCountText" Text="1 window"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
