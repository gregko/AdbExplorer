<Window x:Class="AdbExplorer.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About ADB Explorer" 
        Height="300" 
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Padding="20">
            <StackPanel>
                <Image Source="Resources/icon.ico" Width="64" Height="64" Margin="0,0,0,10"/>
                <TextBlock Text="ADB Explorer" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <StackPanel Grid.Row="1" Margin="20,10" VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,10">
                <Run Text="A Windows application for browsing and managing files on Android devices using ADB (Android Debug Bridge)."/>
            </TextBlock>
            <TextBlock TextAlignment="Center" Margin="0,0,0,10">
                <Hyperlink NavigateUri="https://github.com/gregko/AdbExplorer" RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Text="View on GitHub"/>
                </Hyperlink>
            </TextBlock>
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                <Run Text="Â© 2024 ADB Explorer"/>
                <LineBreak/>
                <Run Text="Licensed under MIT License"/>
            </TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,10">
            <Button Name="OkButton" Content="OK" Width="75" Height="25" IsDefault="True" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>